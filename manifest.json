{
    "manifest_version": 3,
    "name": "RightClickEtymology",
    "version": "1.0",

    "action": {
        "default_icon": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
        },
        "default_title": "RightClickEtymology",
        "default_popup": "popup.html"
    },

    "description": "Easily search for word etymology on Wiktionary",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": ["contextMenus"]
}
